<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/black">

    <include layout="@layout/toolbar2_activity" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp">
    <TextView
        android:id="@+id/tv_aboutus"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textColor="#ffffff"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:text="SAFETRIP is the worlds first Healthcare Transportation app. SAFETRIP's patent pending technology makes healthcare transportation more convenient, affordable, and modern.
It's also the first mobile application with an easy to use interface that accepts insurance, debit, and credit cards. SAFETRIP is equipped with 4 travel options to suit an array of users.
"/>


</LinearLayout>
    </ScrollView>

</LinearLayout>
